{
  "report-dir": "coverage-e2e",
  "temp-dir": ".nyc_output",
  "reporter": ["text", "lcov", "html", "json"],
  "exclude": [
    "cypress/**/*",
    "tests/**/*",
    "node_modules/**/*",
    "dist/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.cy.ts",
    "vite.config.ts",
    "cypress.config.ts"
  ],
  "extension": [
    ".js",
    ".ts",
    ".vue"
  ],
  "all": true,
  "check-coverage": false,
  "include": [
    "src/**/*"
  ]
}
